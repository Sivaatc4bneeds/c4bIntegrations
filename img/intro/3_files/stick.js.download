var count = 0;
$('#menu-wrap').prepend('<div id="menu-trigger"><i class="fa fa-2x fa-bars"></i></div>');
$("#menu-trigger").on("click", function(){
$("#menu").slideToggle();

console.log(count);
if(count == 1){
	$('.logo-social').removeClass('hide-header');
	count = 0;
}

else{
	$('.logo-social').addClass('hide-header');
	count = 1;
}

console.log(count);
